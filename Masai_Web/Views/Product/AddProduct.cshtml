                        @*     </div> *@
                        @* </div> *@
                        <div class="col-md-12 col-sm-12">
                            <div class="form-account-title"><span>*</span>تعداد</div>
                            <div class="form-account-row">
                                <input class="input_second input_all" type="text" asp-for="Quantity" placeholder="تعداد">
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <div class="form-account-title"><span>*</span>قیمت</div>
                            <div class="form-account-row">
                                <input class="input_second input_all" type="text" asp-for="Price" placeholder="قیمت">
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <div class="form-account-title"><span>*</span>تخفیف</div>
                            <div class="form-account-row">
                                <input class="input_second input_all" type="text" asp-for="Discount" placeholder="تخفیف">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-sm-12">
                        <div class="form-account-title"><span>*</span>اپلود عکس</div>
                        <div class="form-account-row">
                            <input class="input_second input_all" type="file" asp-for="ImageName" placeholder=" اپلود عکس">
                        </div>
                    </div>
                    <div class="col-12 text--center">
                        <button type="submit" class="btn big_btn btn-main-masai">ثبت</button>
                    </div>
                </form>


            </div>
        </div>
