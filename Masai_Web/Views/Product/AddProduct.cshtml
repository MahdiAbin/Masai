@model Core.DTOs.Product.AddProductDTO

@{
    ViewBag.Title = "افزودن محصول";
    Layout = "_Layout";
}
<div class="container">
    <div class="row">
        <div class="main-content login_content  col-12 col-md-7 col-lg-5 mx-auto">
