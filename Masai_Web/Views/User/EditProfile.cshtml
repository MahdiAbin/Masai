@model Core.DTOs.EditProfile

@{
    ViewBag.Title = "ویرایش اطلاعات حساب";
    Layout = "_Layout";
}

<main class="profile-user-page default space-top-30">
<div class="container">
<div class="row">

    <div class="main-content login_content col-xl-9 col-lg-8 col-md-12 order-2 mx-auto">
        <form method="post"> 
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <header class="card-header">
                    <h3 class="card-title">
                        <span>اطلاعات حساب شخصی</span>
                    </h3>
                </header>
                <div class="login_box">


                    <form class="">
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="form-account-title"><span>*</span> نام کاربری</div>
                                <div class="form-account-row">
                                    <input class="input_second input_all" type="text" name="UserName" value="@Model.UserName" placeholder="مثال:mirazimi">
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <div class="form-account-title"><span>(اختیاری)</span> نام </div>
                                <div class="form-account-row">
                                    <input class="input_second input_all" type="text" value="@Model.FName" name="FName" placeholder="مثال: رضا">
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <div class="form-account-title"><span>(اختیاری)</span> نام خانوادگی</div>
                                <div class="form-account-row">
                                    <input class="input_second input_all" type="text" value="@Model.LName" name="LName" placeholder="مثال: امینی">
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <div class="form-account-title"><span>*</span> شماره همراه </div>
                                <div class="form-account-row">
                                    <input class="input_second input_all" type="text" value="@Model.MobileNumber" name="MobileNumber" placeholder="مثال: 09123456789">
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <div class="form-account-title"><span>(اختیاری)</span> ایمیل </div>
                                <div class="form-account-row">
                                    <input class="input_second input_all" name="Email" type="text" placeholder="مثال: info@test.com" value="@Model.Email">
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <div class="form-account-title"><span>(اختیاری)</span> شغل </div>
                                <div class="form-account-row">
                                    <input class="input_second input_all" name="Job" type="text" placeholder="مثال: مهندس" value="@Model.Job">
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <div class="form-account-title"><span>(اختیاری)</span> کد ملی </div>
                                <div class="form-account-row">
                                    <input class="input_second input_all" name="NationalCode" type="text" placeholder="مثال: 1251234567" value="@Model.NationalCode">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-account-agree">
                                    <label class="checkbox-form checkbox-primary">
                                        <input type="checkbox" id="agree" name="Sms">
                                        <span class="checkbox-check"></span>
                                    </label>
                                    <label for="agree"> تمایل به دریافت پیامک دارم</label>
                                </div>
                            </div>
                        </div>
                    </form>


                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <header class="card-header">
                    <h3 class="card-title">
                        <span>اطلاعات حساب بانکی</span>
                    </h3>
                </header>
                <div class="login_box">

                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <div class="form-account-title"><span>(اختیاری)</span> شماره کارت</div>
                            <div class="form-account-row">
                                <input class="input_second input_all" value="@Model.NumberCart" name="NumberCart" type="text" placeholder=" شماره کارت شما">
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <div class="form-account-title"><span>(اختیاری)</span> شماره شبا</div>
                            <div class="form-account-row">
                                <input class="input_second input_all" type="password" name="Sheba" value="@Model.Sheba" placeholder=" شماره شبا شما">
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <button type="submit" class="btn big_btn btn-main-masai">ثبت اطلاعات کاربری </button>
        </div>
        </form>

</div>

<div class="profile-page-aside col-xl-3 col-lg-4 col-md-6 center-section order-1">
    <div class="profile-card-1">
        <!--image-->
        <div class="img">

            <img src="~/assets/img/profile.jpg"/>
        </div>
        <a class="view-more" href="#" data-toggle="modal" data-target="#myModal">
            <i class="fa fa-plus-circle"></i>
        </a>
        <div class="modal-share modal-width-custom modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
